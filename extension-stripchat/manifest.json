{
  "manifest_version": 3,
  "name": "CamAssist - StripChat",
  "version": "1.0.2",
  "description": "AI assistant for webcam models on StripChat",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.stripchat.com/*"],
    "js": ["content.js"]
  }],
  "permissions": ["storage", "activeTab", "scripting"]
}