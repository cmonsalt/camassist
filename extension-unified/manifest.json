{
  "manifest_version": 3,
  "name": "CamAssist",
  "version": "2.0.0",
  "description": "AI assistant for webcam models",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [{
    "matches": ["*://*.chaturbate.com/*", "*://*.stripchat.com/*"],
    "js": ["content.js"]
  }],
  "permissions": ["storage", "activeTab", "scripting"]
}